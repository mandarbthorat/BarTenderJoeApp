{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": {
    "AngularApp": "https://bartenderjoe.com"
  },
  "ReverseProxy": {
    "Routes": {
      "products": {
        "ClusterId": "apiCluster",
        "Match": { "Path": "/gateway/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/gateway" }
        ]
      }
    },
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "api": { "Address": "https://api.bartenderjoe.com" }
        }
      }
    }
  }
}
